<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="login.css" type="text/css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    </head>
    <body class="prod">
        <div class="container_formcontainer1">
            <h1 class="formheader"> Add Employee </h1>
            <form action="/uploadInfo" method="POST">
                <div class="form_group">
                    <label class="label" for="product id">Product ID</label>
                    <input type="text" placeholder="Product id" class="form-control" name="productid" id="productid" required>
                </div>
                <div class="form_group">
                    <label class="label" for="name"> Name </label>
                    <input type="text" placeholder="Name" class="form-control" name="productname" id="productname" required>
                </div>
                <div class="form_group">
                    <label class="label" for="invoice no"> Invoice No. </label>
                    <input type="text" placeholder="invoice" class="form-control" name="invoiceno" id="invoiceno" required>
                </div>
                <div class="form_group">
                    <label class="label" for="date"> Date </label>
                    <input type="date" placeholder="date" class="form-control" name="date" id="data" required>
                </div>
                <div class="form_group">
                    <label class="label" for="cost"> Cost </label>
                    <input type="text" placeholder="cost" class="form-control" name="cost" id="cost" required>
                </div>
                <div class="form_group">
                    <label class="label" for="ownedby"> Owned By </label>
                    <input type="text" placeholder="ownedby" class="form-control" name="ownedby" id="ownedby" required>
                    <!-- <select name="ownedby" id="ownedby" class="form_control"> -->
                        <!-- <% for( var i = 0; i <product.length; i++){ %> -->
                            <!-- <% var value = product[i].name %> -->
                            <!-- <option value= <%= value %>> <%= value %></option>                            -->
                        <!-- <% } %> -->
                    <!-- </select> -->
                </div>
                <div class="form_group">
                    <label class="label" for="purpose"> Purpose </label>
                    <input type="text" placeholder="purpose" class="form-control" name="purpose" id="purpose" required>
                </div>
                <div class="form_group">
                    <label class="label" for="workingcondition"> Working Condition</label>
                    <div class="form_check">
                        <input value="Good" type="radio" name="workingcondition" id="workingcondition1">
                        <label class="form_check_label" for="workingcondition1"> Good </label>
                    </div>
                    <div class="form_check">
                        <input value="Bad" type="radio" name="workingcondition" id="workingcondition2">
                        <label class="form_check_label" for="workingcondition2"> Bad </label>
                    </div>
                </div>
                <div class="form_group">
                    <label class="label" for="type"> Type </label>
                    <div class="form_check">
                        <input value="product" type="radio" name="type" id="type1">
                        <label class="form_check_label" for="type1"> Product </label>
                    </div>
                    <div class="form_check">
                        <input value="service" type="radio" name="type" id="type2">
                        <label class="form_check_label" for="type2"> Service </label>
                    </div>

                </div>
           
          
                 <input type="submit" class="btn btn-outline-light btn-sm">
                <!-- <input type="submit" class="btn btn-outline-light btn-sm" value="Upload"> -->
            </form>
        </div>
    </div>




        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
    </body>
</html>